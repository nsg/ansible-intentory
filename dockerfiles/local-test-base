FROM ubuntu:trusty
ARG HOST_USER_UID

RUN apt-get -y update \
    && apt-get -y install \
        python-pip \
        python-dev \
    && apt-get -y clean \
    && pip install --upgrade pip \
    && pip install pyyaml==5.1

RUN adduser \
    --home /tmp \
    --no-create-home \
    --uid $HOST_USER_UID \
    user

WORKDIR /mnt
